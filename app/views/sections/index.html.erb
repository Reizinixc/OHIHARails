<h1>Teaching Section's List</h1>

<div class="overflow-hidden">
  <div class="config">
    <%= link_to 'New Section', new_section_path %> | <%= link_to 'Add student to section', new_take_path %>
  </div>

  <table id="table">
    <tr>
      <th>Activate?</th>
      <th>Course Code</th>
      <th>English Course Name</th>
      <th>Section</th>
      <th>Semester</th>
      <th>Year</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

    <% @sections.each do |section| %>
      <tr>
        <% course = section.course %>
        <td><%= section.is_suspend %></td>
        <td><%= course.course_code %></td>
        <td><%= course.english_course_name %></td>
        <td class="text-center"><%= section.section %></td>
        <td class="text-center"><%= get_abbr_semester_text section.semester %></td>
        <td class="text-center"><%= section.year %></td>
        <td><%= link_to 'Edit', edit_section_path(section) %></td>
        <td class="text-center"><%= link_to "#{(section.is_suspend ? "Dea" : "A")}ctivated", "/section/toggle/#{section.id}" %></td>
      </tr>
    <% end %>
  </table>
</div>

