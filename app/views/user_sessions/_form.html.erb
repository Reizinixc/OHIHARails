<%= form_for(@user_session, :id => "bg_right") do |f| %>
  <%= render :partial => "shared/user_error", :locals => { :model_object => @user_session } %>

  <%= f.label :username %>
  <%= f.text_field :username %>

  <%= f.label :password %>
  <%= f.password_field :password %>
  <%= f.submit "Sign in", :disable_with => "Signing in...", :class => "action-btn green" %>
<% end %>
