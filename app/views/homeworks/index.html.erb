<h1>Homework List</h1>
<% @homeworks.each do |h| %>
  <div id="assignment" class="ok" style="display: block; line-height: 1.3em; margin: 5px 0px; padding: 10px; width: 500px; background-color: #a6e9a4; border-radius: 5px;">
    <span class="hw-title"><%= "Homework: #{h.title} -- #{h.section.course.english_course_name}" %></span><br />
    <span class="duedate"><%= "Send before: #{h.due_time.strftime "%m-%d-%Y %H:%M"}" %></span>
    <span class="desc"><%= h.description %></span>
  </div>
<% end %>

<div id="assignment" class="timeout" style="display: block; line-height: 1.3em; margin: 5px 0px; padding: 10px; width: 500px; background-color: #e5a5b4; border-radius: 5px; opacity: 0.5;">
