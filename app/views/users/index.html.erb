<h1>Listing users</h1>

<table id="table">
  <tr>
    <th>Login</th>
    <th>Name</th>
    <th>Lastname</th>
    <th>Email</th>
    <th>Alt email</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.username %></td>
    <td><%= user.name %></td>
    <td><%= user.lastname %></td>
    <td><%= user.email %></td>
    <td><%= user.alt_email %></td>
    <td><%= link_to 'Show', "/user/#{user.username}" %></td>
    <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>