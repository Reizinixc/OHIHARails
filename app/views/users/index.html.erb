<h1>Listing users</h1>

<div style="font-family: 'RobotoBold'; color: #2f4f4f;">
<br/><h1>Listing users</h1><br/>
</div>
<div class="bgstyle">
  <table id="table">
    <tr>
      <th>Login</th>
      <th>Name</th>
      <th>Lastname</th>
      <th>Email</th>
      <th>Alt email</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.name %></td>
        <td><%= user.lastname %></td>
        <td><%= user.email %></td>
        <td><%= user.alt_email %></td>
        <td><%= link_to 'Show', "/user/#{user.username}" %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </table>

  <br/>

  <%= link_to 'New User', new_user_path %>
</div>
