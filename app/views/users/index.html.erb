<h1>Listing users</h1>
<div class="bgstyle">
  <table id="table">
    <tr>
      <th>Username</th>
      <th>Name</th>
      <th>Lastname</th>
      <th>Email</th>
      <th>Alt. email</th>
      <th></th>
      <% if admin? %>
        <th></th>
      <% end %>
    </tr>

    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.name %></td>
        <td><%= user.lastname %></td>
        <td><%= user.email %></td>
        <td><%= user.alt_email %></td>
        <td><%= link_to 'Show', "/user/#{user.username}" %></td>
        <% if admin? %>
          <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </table>
</div>
