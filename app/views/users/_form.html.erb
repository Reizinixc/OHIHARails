<%= form_for(@user) do |f| %>
  <%= render :partial => "shared/user_error", :locals => { :model_object => @user } %>

  <div id="field">
    <%= f.label :username %>
    <%= f.password_field :username %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>

    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :lastname %>
    <%= f.text_field :lastname %>

    <%= f.label :email %>
    <%= f.text_field :email %>

    <%= f.label :alt_email %>
    <%= f.text_field :alt_email %>

    <%= f.submit "Submit", :disable_with => "Submitting...", :class => "action-btn green" %>
  </div>
<% end %>
